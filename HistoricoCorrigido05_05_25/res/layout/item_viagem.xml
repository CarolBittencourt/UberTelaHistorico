<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/CorFundoDeTela"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagemCarro"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/imgcarro" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textEnderecoDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/textEnderecoDestino"
            android:textColor="#FFF7F7"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDataHoraViagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="@string/textDataHoraViagem"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btnConsultarDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/CorBtnConsultarDetalhes"
            android:drawableEnd="@drawable/setabtnconsultar"
            android:textColor="@color/Branco"
            android:text="@string/BtnConsultarDetalhes"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>

